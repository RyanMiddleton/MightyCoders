@page
@model Smart.Pages.Notes.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Note</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Note.StudentId" class="control-label"></label>
                <select asp-for="Note.StudentId" class ="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note.UserId" class="control-label"></label>
                <select asp-for="Note.UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note.NoteTypeId" class="control-label"></label>
                <select asp-for="Note.NoteTypeId" class ="form-control" asp-items="ViewBag.NoteTypeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Note.Text" class="control-label"></label>
                @Html.TextAreaFor(n => n.Note.Text, new { @cols = "4", @rows = "4", style = "width:100%;" })
                <span asp-validation-for="Note.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
